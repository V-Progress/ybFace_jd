<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="2"
    android:background="@mipmap/system_bg_h"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_btnrepicture"
        android:orientation="vertical"
        android:padding="1dp">

        <com.yunbiao.ybsmartcheckin_live_id.faceview.FaceView
            android:id="@+id/face_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp">
                <Button
                    android:id="@+id/btn_TakePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_btn_take_photo"
                    android:drawableLeft="@mipmap/icon_camera"
                    android:paddingLeft="10dp"
                    android:text="@string/employ_add_takephoto"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/alv_take_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    match:indicator="LineScalePulseOutRapid" />

            </RelativeLayout>

            <Button
                android:layout_gravity="bottom"
                android:id="@+id/btn_ReTakePhoto"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_bg_btnrepicture"
                android:drawableLeft="@mipmap/icon_repicture"
                android:paddingLeft="10dp"
                android:text="@string/employ_add_retry"
                android:textColor="@color/theme_green"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:id="@+id/iv_capture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@mipmap/avatar" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_employ_list"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_back"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_jbxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/employ_add_info"
            android:textColor="@color/font_green"
            android:textSize="20dp" />

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/ll_name"
            android:layout_below="@+id/tv_jbxx"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/employ_add_name"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="@mipmap/bg_edit"
                android:textColor="@color/font_green"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/ll_depart"
            android:layout_below="@+id/ll_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/employ_add_depart"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/sp_depart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:background="@drawable/selector_btn_take_photo"
                android:textColor="@color/font_green"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_below="@+id/ll_depart"
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/employ_add_number"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="@mipmap/bg_edit"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_below="@+id/ll_number"
            android:id="@+id/ll_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/employ_add_job"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_job"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="@mipmap/bg_edit"
                android:textColor="@color/font_green"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_below="@+id/ll_job"
            android:id="@+id/ll_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/employ_add_birthday"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="@mipmap/bg_edit"
                android:gravity="center_vertical"
                android:textColor="@color/font_green"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/ll_signature"
            android:layout_below="@+id/ll_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="@string/employ_add_signature"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_sign"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_btnrepicture"
                android:textColor="@color/font_green"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:layout_below="@+id/ll_signature"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="108dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_bg_btnsync"
                android:text="@string/employ_add_confirm"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_cancle"
                android:layout_width="108dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_bg_btnrepicture"
                android:text="@string/employ_add_cancel"
                android:textColor="@color/theme_green"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>