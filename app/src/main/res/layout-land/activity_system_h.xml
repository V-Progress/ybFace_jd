<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/system_bg_h"
    android:orientation="vertical"
    tools:context="com.yunbiao.ybsmartcheckin_live_id.activity.SystemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:maxWidth="160dp"
            android:id="@+id/iv_system_logo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo" />

        <TextView
            android:maxLength="20"
            android:maxLines="2"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:id="@+id/tv_system_compName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云标智能签到系统"
            android:textColor="@color/white"
            android:textSize="38dp" />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_back"
            android:id="@+id/tv_online_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_employ_button"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="在线"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:padding="30dp"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:src="@mipmap/icon_back" />
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_btnrepicture"
            android:orientation="vertical">

            <LinearLayout style="@style/system_item_ll_h">

                <TextView
                    style="@style/system_item_lable_tv_h"
                    android:text="设备编号 :" />

                <TextView
                    android:id="@+id/tv_deviceno_system"
                    style="@style/sustem_item_info_shape" />
            </LinearLayout>
            <LinearLayout style="@style/system_item_ll_h">

                <TextView
                    style="@style/system_item_lable_tv_h"
                    android:text="绑&#8194;定&#8194;码 :" />

                <TextView
                    android:id="@+id/tv_bindcode_syetem"
                    style="@style/sustem_item_info_shape" />
            </LinearLayout>

            <LinearLayout style="@style/system_item_ll_h">

                <TextView
                    style="@style/system_item_lable_tv_h"
                    android:text="所属公司 :" />

                <TextView
                    android:id="@+id/tv_company_system"
                    style="@style/system_item_info" />
            </LinearLayout>


            <LinearLayout style="@style/system_item_ll_h">

                <TextView
                    style="@style/system_item_lable_tv_h"
                    android:text="服务网络 :" />

                <TextView
                    android:id="@+id/tv_server_system"
                    style="@style/system_item_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="100dp">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_setnet_system"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_btn_take_photo"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="设置"
                        android:textColor="@color/white"
                        android:textSize="28dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/system_item_ll_h"
                android:layout_width="match_parent">

                <TextView
                    style="@style/system_item_lable_tv_h"
                    android:text="有&#8194;效&#8194;期 :" />

                <TextView
                    android:id="@+id/tv_exp_system"
                    style="@style/system_item_info"
                    android:layout_weight="1" />

                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="80dp"
                    android:textSize="28dp"
                    android:id="@+id/tv_qr_lable"
                    style="@style/system_item_info"
                    android:text="扫码续费o(∩_∩)o" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_qrcode_system"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:src="@mipmap/img_ewm" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <TableRow
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_depart_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_take_photo"
                        android:padding="26dp"
                        android:text="员工管理"
                        android:textColor="@color/white"
                        android:textSize="36dp" />

                    <Button
                        android:id="@+id/btn_add_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_take_photo"
                        android:padding="26dp"
                        android:text="新增员工"
                        android:textColor="@color/white"
                        android:textSize="36dp" />
                </TableRow>

                <TableRow
                    android:layout_margin="30dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_data_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_take_photo"
                        android:padding="26dp"
                        android:text="离线数据"
                        android:textColor="@color/white"
                        android:textSize="36dp" />

                    <Button
                        android:id="@+id/btn_setting_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_take_photo"
                        android:padding="26dp"
                        android:text="系统设置"
                        android:textColor="@color/white"
                        android:textSize="36dp" />

                </TableRow>
            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="70dp"
                    android:background="@drawable/shape_employ_button">

                    <com.roger.match.library.MatchTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        match:text="YUNBIAO WULIAN"
                        match:textColor="@color/white"
                        match:textSize="60dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right|center">

                        <TextView
                            android:id="@+id/tv_version_system"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btn_update_system"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/selector_btn_take_photo"
                            android:text="升级"
                            android:textColor="@color/white"
                            android:textSize="25dp" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="版权所有：北京云标科技有限公司"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
