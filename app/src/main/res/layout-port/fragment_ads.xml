<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:translationY="-152dp"
        android:background="#013058"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/iv_ads_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="75dp"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_yb" />

        <TextView
            android:id="@+id/tv_ads_addname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_ads_logo"
            android:text="云标智能签到"
            android:textColor="@color/white"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/tv_ads_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ads_addname"
            android:layout_alignStart="@+id/tv_ads_addname"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:text="智能人脸签到，让企业更放心~"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <TextClock
            android:id="@+id/tc_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:format12Hour="yyyy.MM.dd\nEE     a"
            android:format24Hour="yyyy.MM.dd\nEE     a"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tc_hour"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tc_hour"
            android:format12Hour="hh:mm"
            android:format24Hour="HH:mm"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ads_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tc_hour"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/iv_ads_wea"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tc_hour"
            android:layout_marginTop="14dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_ads_tem" />
    </RelativeLayout>

    <FrameLayout
        android:translationY="1700dp"
        android:id="@+id/layout_ads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ads_bg"
        android:elevation="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_out_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/img_wel"
            android:visibility="visible" />

        <VideoView
            android:id="@+id/vv_out_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>