<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_init">

    <!--人脸识别布局-->
    <LinearLayout
        android:id="@+id/ll_face_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bj"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:onClick="goSetting"
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/tv_comName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/imageView_logo"
                android:text=""
                android:textColor="@color/theme_green"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="云标智能签到"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:format24Hour="yyyy/MM/dd  HH:mm:ss"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="960dp"
            android:layout_height="540dp"
            android:background="@color/black"
            android:orientation="vertical">

            <com.yunbiao.ybsmartcheckin_live_id.faceview.FaceView
                android:id="@+id/face_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.yunbiao.ybsmartcheckin_live_id.faceview.FaceView>

            <TextView
                android:padding="10dp"
                android:visibility="gone"
                android:background="@color/black"
                android:letterSpacing="0.1"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:id="@+id/tv_camera_error"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="438dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="62dp"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_head">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/bg_headimg" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_userPhoto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="17dp"
                        android:src="@mipmap/avatar" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1A71BB"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:gravity="center"
                        android:text="李慧 java开发"
                        android:textColor="@color/white"
                        android:textSize="32dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center"
                        android:text="欢迎光临"
                        android:textColor="@color/white"
                        android:textSize="24dp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bg_subtitle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_tip" />

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="950dp"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:padding="10dp"
                android:background="@mipmap/bg_visitor"
                android:scaleType="centerInside"
                android:layout_gravity="bottom|left"
                android:id="@+id/iv_qrCode_add"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/tv_checkInNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/bg_yqdry"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <FrameLayout
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="goMakeUp"
                    android:layout_gravity="center"
                    android:id="@+id/iv_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_record"/>

                <com.wang.avi.AVLoadingIndicatorView
                    android:visibility="gone"
                    android:id="@+id/aiv_bulu"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <GridView
                android:visibility="gone"
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:columnWidth="20dp"
                android:horizontalSpacing="20dp"
                android:numColumns="3"
                android:verticalSpacing="20dp"/>

            <TextView
                android:textColor="@color/white"
                android:visibility="gone"
                android:id="@+id/tv_load_error"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/ll_load_container"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avloding"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    match:indicator="LineScalePulseOutRapid" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:text="正在加载数据..."
                    android:gravity="center"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:background="#43000000"
            android:id="@+id/layout_h"
            android:layout_width="match_parent"
            android:layout_height="562dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_inside_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_inside_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_sign_wel"
                    android:visibility="visible" />
            </FrameLayout>

            <VideoView
                android:id="@+id/vv_inside_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bottomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/img_bottom"
            android:gravity="center"
            android:maxLength="18"
            android:text="云标智能签到"
            android:textColor="@color/theme_green"
            android:textSize="20dp" />
    </LinearLayout>

    <!--广告头部布局-->
    <include layout="@layout/layout_head"/>

    <!--广告布局-->
    <include layout="@layout/layout_out_ads" />

    <!--初始化布局-->
    <include layout="@layout/layout_init" />

</RelativeLayout>