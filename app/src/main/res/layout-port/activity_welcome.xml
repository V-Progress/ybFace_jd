<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_face_main"
    android:background="@mipmap/bj"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_main_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:onClick="goSetting"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/tv_main_abbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_main_logo"
                android:text=""
                android:textColor="@color/theme_green"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_main_topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="云标智能签到"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:format24Hour="yyyy/MM/dd  HH:mm:ss"
                android:format12Hour="yyyy/MM/dd  HH:mm:ss"
                android:textColor="@color/white"
                android:textSize="26dp" />
        </RelativeLayout>

        <FrameLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <com.yunbiao.ybsmartcheckin_live_id.faceview.face_new.FaceView
                android:id="@+id/face_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:layout_gravity="bottom"
                android:id="@+id/ll_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/layout_h"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tv_main_bottomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/img_bottom"
            android:gravity="center"
            android:maxLength="18"
            android:text="云标智能签到"
            android:textColor="@color/theme_green"
            android:textSize="20dp" />
    </LinearLayout>
</FrameLayout>
