<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_index_record_multi_thermal"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_date_record_multi_thermal"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time_record_multi_thermal"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_temper_record_multi_thermal"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp">
        <ImageView
            android:scaleType="fitCenter"
            android:src="@mipmap/multi_thermal_bg"
            android:layout_gravity="center"
            android:id="@+id/iv_head_record_multi_thermal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp">
        <ImageView
            android:src="@mipmap/multi_thermal_bg"
            android:layout_gravity="center"
            android:id="@+id/iv_hot_record_multi_thermal"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>