<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skin_main_screen_background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    tools:context=".activity.SettingActivity">

    <include layout="@layout/head_layout"/>

    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="门禁常开" />

                <Switch
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/sw_setting_already"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_kqrlkjx" />

                <CheckBox
                    android:textColor="@color/white"
                    android:id="@+id/cb_mirror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="@string/act_sys_open"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_jdqys" />

                <EditText
                    android:textColorHint="@color/gray_low"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLength="5"
                    android:inputType="number"
                    android:background="@drawable/line_net_edt"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/edt_delay"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    style="@style/setting_text"
                    android:text="@string/act_sys_second" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_CPU_tem" />

                <TextView
                    android:id="@+id/tv_cpu_temper"
                    style="@style/setting_text"
                    android:text="0℃" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_camera" />

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_totalOne" />

                <TextView
                    android:id="@+id/tv_camera"
                    style="@style/setting_text"
                    android:text="@string/act_sys_dqsy" />

                <Button
                    android:textColor="#59B4CA"
                    android:background="@drawable/shape_system_name"
                    android:id="@+id/btn_setAngle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/cb_mirror"
                    android:onClick="setAngle" />

                <Spinner
                    android:visibility="gone"
                    android:background="@drawable/shape_system_name"
                    android:id="@+id/spn_camera_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_dqwl" />

                <TextView
                    android:id="@+id/tv_wifi_state"
                    style="@style/setting_text"
                    android:text="@string/act_sys_WIFI_wlmc" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:onClick="rebootDevice"
                android:text="@string/act_sys_WIFI_cqsb" />

            <TextView
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:onClick="checkUpgrade"
                android:text="@string/act_sys_jcsj" />

            <TextView
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:onClick="modifyPWD"
                android:text="@string/act_sys_glmmxg" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>