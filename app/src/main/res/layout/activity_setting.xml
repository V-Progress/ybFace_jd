<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skin_main_screen_background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    tools:context=".activity.SettingActivity">

    <include layout="@layout/head_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/setting_text"
                    android:text="门禁常开" />

                <Switch
                    android:id="@+id/sw_setting_already"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="设置人脸相似度阈值" />

                <EditText
                    android:id="@+id/edt_similar_threshold"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/line_net_edt"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low" />

                <Button
                    android:id="@+id/btn_set_similar_threshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/cb_mirror"
                    android:background="@drawable/shape_system_name"
                    android:text="@string/System_Setting_save_threshold"
                    android:textColor="#59B4CA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:text="最佳阈值区间：75 - 90（数值越大，误识率越低，识别速度越慢）"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="开启人脸弹窗" />

                <Switch
                    android:id="@+id/sw_face_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/setting_text"
                        android:text="开启测温模块" />

                    <Switch
                        android:id="@+id/sw_temperature_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/setting_text"
                        android:text="测温矫正值"/>

                    <EditText
                        android:id="@+id/edt_temp_correct_setting"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_net_edt"
                        android:inputType="number|numberDecimal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />

                    <TextView
                        style="@style/setting_text"
                        android:layout_marginLeft="20dp"
                        android:text="环境温度矫正值" />

                    <EditText
                        android:id="@+id/edt_ambient_correct_setting"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_net_edt"
                        android:inputType="number|numberDecimal"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />

                    <Button
                        android:id="@+id/btn_save_temp_setting"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_system_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="保存"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_kqrlkjx" />

                <CheckBox
                    android:id="@+id/cb_mirror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="@string/act_sys_open"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_jdqys" />

                <EditText
                    android:id="@+id/edt_delay"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/line_net_edt"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low" />

                <TextView
                    style="@style/setting_text"
                    android:layout_marginLeft="10dp"
                    android:text="@string/act_sys_second" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_CPU_tem" />

                <TextView
                    android:id="@+id/tv_cpu_temper"
                    style="@style/setting_text"
                    android:text="0℃" />
            </LinearLayout>


            <LinearLayout
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_camera" />

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_totalOne" />

                <TextView
                    android:id="@+id/tv_camera"
                    style="@style/setting_text"
                    android:text="@string/act_sys_dqsy" />

                <Button
                    android:id="@+id/btn_setAngle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/cb_mirror"
                    android:background="@drawable/shape_system_name"
                    android:onClick="setAngle"
                    android:textColor="#59B4CA" />

                <Spinner
                    android:id="@+id/spn_camera_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_system_name"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/act_sys_dqwl" />

                <TextView
                    android:id="@+id/tv_wifi_state"
                    style="@style/setting_text"
                    android:text="@string/act_sys_WIFI_wlmc" />
            </LinearLayout>

            <TextView
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:onClick="rebootDevice"
                android:text="@string/act_sys_WIFI_cqsb" />

            <TextView
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:onClick="checkUpgrade"
                android:text="@string/act_sys_jcsj" />

            <TextView
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:onClick="modifyPWD"
                android:text="@string/act_sys_glmmxg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_spinner_drop"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  I  P  地  址："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_ip"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资 源 端 口："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_res_port"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XMPP端口："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_xmpp_port"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项    目    名："
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_pro_name"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyz123456789/"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_save_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_take_photo"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>