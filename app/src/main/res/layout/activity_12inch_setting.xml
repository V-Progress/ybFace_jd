<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yunbiao.ybsmartcheckin_live_id.temper_12inch.activity.Setting12InchActivity.EventListener"/>
        <import type="com.yunbiao.ybsmartcheckin_live_id.temper_12inch.databean.Setting12InchDataBean"/>

        <variable
            name="eventListener"
            type="EventListener" />
        <variable
            name="setting12InchDataBean"
            type="Setting12InchDataBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main">

        <View
            android:id="@+id/v_top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@mipmap/bg_top_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@mipmap/icon_goback"
            android:clickable="true"
            android:onClick="@{eventListener::onClick}"
            app:layout_constraintStart_toStartOf="@id/v_top"
            app:layout_constraintTop_toTopOf="@id/v_top"
            app:layout_constraintBottom_toBottomOf="@id/v_top"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ac_tv_setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/setting_title_text"
            android:text='@string/setting_title'
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform"
            android:textSize="30sp"
            android:maxLines="1"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/v_top"
            app:layout_constraintBottom_toBottomOf="@+id/v_top"
            app:layout_constraintTop_toTopOf="@+id/v_top"
            app:layout_constraintEnd_toEndOf="@+id/v_top" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/v_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="50dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ac_tv_display_title"
                    android:layout_width="@dimen/setting_item_title_width"
                    android:layout_height="@dimen/setting_item_title_height"
                    android:text='@string/display_title'
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="right|center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioGroup
                    android:id="@+id/rg_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_item_content_marginStart"
                    android:orientation="horizontal"
                    android:onCheckedChanged="@{eventListener::onCheckedChanged}"
                    app:layout_constraintStart_toEndOf="@id/ac_tv_display_title"
                    app:layout_constraintTop_toTopOf="@id/ac_tv_display_title"
                    app:layout_constraintBottom_toBottomOf="@id/ac_tv_display_title">
                    <RadioButton
                        android:id="@+id/rb_celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:text='@string/celsius_text'/>
                    <RadioButton
                        android:id="@+id/rb_fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:text='@string/fahrenheit_text'/>
                </RadioGroup>

                <View
                    android:id="@+id/v_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/setting_line_bg"
                    app:layout_constraintTop_toBottomOf="@id/ac_tv_display_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ac_tv_calibration_title"
                    android:layout_width="@dimen/setting_item_title_width"
                    android:layout_height="@dimen/setting_item_title_height"
                    android:text='@string/calibration_title'
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:layout_marginTop="20dp"
                    android:gravity="right|center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/v_line_2"
                    app:layout_constraintStart_toStartOf="@id/ac_tv_display_title"
                    app:layout_constraintEnd_toEndOf="@id/ac_tv_display_title"/>

                <FrameLayout
                    android:id="@+id/fl_sub_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:onTouch="@{eventListener::onTouch}"
                    android:background="@drawable/selector_num_jj_bg"
                    android:layout_marginStart="@dimen/setting_item_content_marginStart"
                    app:layout_constraintStart_toEndOf="@id/ac_tv_calibration_title"
                    app:layout_constraintTop_toTopOf="@id/ac_tv_calibration_title"
                    app:layout_constraintBottom_toBottomOf="@id/ac_tv_calibration_title">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_sub"/>
                </FrameLayout>

                <EditText
                    android:id="@+id/et_calibration_content"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:text="@={setting12InchDataBean.calibrationContent}"
                    android:inputType="numberDecimal|numberSigned"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@id/fl_sub_btn"
                    app:layout_constraintTop_toTopOf="@id/ac_tv_calibration_title"
                    app:layout_constraintBottom_toBottomOf="@id/ac_tv_calibration_title"/>

                <FrameLayout
                    android:id="@+id/fl_add_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:onTouch="@{eventListener::onTouch}"
                    android:background="@drawable/selector_num_jj_bg"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/et_calibration_content"
                    app:layout_constraintTop_toTopOf="@id/ac_tv_calibration_title"
                    app:layout_constraintBottom_toBottomOf="@id/ac_tv_calibration_title">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_5inch_add"/>
                </FrameLayout>

                <View
                    android:id="@+id/v_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/setting_line_bg"
                    app:layout_constraintTop_toBottomOf="@id/ac_tv_calibration_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ac_tv_warning_title"
                    android:layout_width="@dimen/setting_item_title_width"
                    android:layout_height="@dimen/setting_item_title_height"
                    android:text='@string/warning_title'
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:layout_marginTop="20dp"
                    android:gravity="right|center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/v_line_3"
                    app:layout_constraintStart_toStartOf="@id/ac_tv_calibration_title"
                    app:layout_constraintEnd_toEndOf="@id/ac_tv_calibration_title"/>

                <EditText
                    android:id="@+id/et_waring_content"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:text="@={setting12InchDataBean.warningContent}"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/setting_item_content_marginStart"
                    app:layout_constraintStart_toEndOf="@id/ac_tv_warning_title"
                    app:layout_constraintTop_toTopOf="@id/ac_tv_warning_title"
                    app:layout_constraintBottom_toBottomOf="@id/ac_tv_warning_title"/>

                <View
                    android:id="@+id/v_line_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/setting_line_bg"
                    app:layout_constraintTop_toBottomOf="@id/ac_tv_warning_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/v_set_net_bg"
                    style="@style/setting_text_child"
                    android:layout_width="match_parent"
                    android:layout_height="510dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/v_line_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <RadioGroup
                    android:id="@+id/rg_server_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:onCheckedChanged="@{eventListener::onCheckedChanged}"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintStart_toStartOf="@id/v_set_net_bg"
                    app:layout_constraintTop_toTopOf="@id/v_net_content_bg">

                    <RadioButton
                        android:id="@+id/rb_yun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/setting_cloud_service"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <RadioButton
                        android:id="@+id/rb_ju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/setting_local_service"
                        android:textColor="@color/white"
                        android:textSize="24dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_device_no_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="@string/System_deviceNo"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintTop_toTopOf="@id/v_set_net_bg"
                    app:layout_constraintStart_toEndOf="@id/rg_server_model"/>

                <TextView
                    android:id="@+id/tv_device_no_5inch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@{setting12InchDataBean.deviceNo}"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/tv_device_no_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_device_no_title"
                    app:layout_constraintStart_toEndOf="@id/tv_device_no_title"
                    app:layout_constraintEnd_toEndOf="@id/v_set_net_bg"/>

                <TextView
                    android:id="@+id/tv_bind_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="@string/System_bindCode"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_no_title"
                    app:layout_constraintStart_toStartOf="@id/tv_device_no_title"/>

                <TextView
                    android:id="@+id/tv_bind_code_5inch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@{setting12InchDataBean.bindCode}"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/tv_bind_code_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bind_code_title"
                    app:layout_constraintStart_toEndOf="@id/tv_bind_code_title"
                    app:layout_constraintEnd_toEndOf="@id/v_set_net_bg"/>

                <TextView
                    android:id="@+id/tv_company_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="@string/System_Company"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_bind_code_title"
                    app:layout_constraintStart_toStartOf="@id/tv_bind_code_title"/>

                <TextView
                    android:id="@+id/tv_company_name_5inch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@{setting12InchDataBean.companyName}"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/tv_company_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_company_title"
                    app:layout_constraintStart_toEndOf="@id/tv_company_title"
                    app:layout_constraintEnd_toEndOf="@id/v_set_net_bg"/>

                <TextView
                    android:id="@+id/tv_net_state_info_5inch"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/shape_spinner_drop"
                    android:textColor="@color/font_green"
                    android:text="@{setting12InchDataBean.netStateInfo}"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/v_set_net_bg"
                    app:layout_constraintEnd_toStartOf="@id/v_net_content_bg"
                    app:layout_constraintTop_toTopOf="@id/v_set_net_bg"
                    app:layout_constraintBottom_toTopOf="@id/v_net_content_bg"/>

                <View
                    android:id="@+id/v_net_content_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintVertical_weight="1"
                    android:background="@drawable/shape_spinner_drop"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@id/rg_server_model"
                    app:layout_constraintEnd_toEndOf="@id/v_set_net_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_company_title"
                    app:layout_constraintBottom_toBottomOf="@id/v_set_net_bg"/>

                <TextView
                    android:id="@+id/tv_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_ip_address"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="@id/v_net_content_bg"
                    app:layout_constraintStart_toStartOf="@id/v_net_content_bg"/>

                <EditText
                    android:id="@+id/et_ip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="20sp"
                    android:digits="0123456789."
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low"
                    android:enabled="@{setting12InchDataBean.serverInfoEnabled}"
                    android:text="@={setting12InchDataBean.serverIp}"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_ip"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ip"
                    app:layout_constraintStart_toEndOf="@id/tv_ip"
                    app:layout_constraintEnd_toEndOf="@id/v_net_content_bg"/>

                <TextView
                    android:id="@+id/tv_res_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_resource_port"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_ip"
                    app:layout_constraintStart_toStartOf="@id/v_net_content_bg"/>

                <EditText
                    android:id="@+id/et_res_port"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low"
                    android:enabled="@{setting12InchDataBean.serverInfoEnabled}"
                    android:text="@={setting12InchDataBean.serverResPort}"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_res_port"
                    app:layout_constraintBottom_toBottomOf="@id/tv_res_port"
                    app:layout_constraintStart_toEndOf="@id/tv_res_port"
                    app:layout_constraintEnd_toEndOf="@id/v_net_content_bg"/>

                <TextView
                    android:id="@+id/tv_xmpp_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_xmpp_port"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_res_port"
                    app:layout_constraintStart_toStartOf="@id/v_net_content_bg"/>

                <EditText
                    android:id="@+id/et_xmpp_port"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low"
                    android:enabled="@{setting12InchDataBean.serverInfoEnabled}"
                    android:text="@={setting12InchDataBean.serverXmppPort}"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_xmpp_port"
                    app:layout_constraintBottom_toBottomOf="@id/tv_xmpp_port"
                    app:layout_constraintStart_toEndOf="@id/tv_xmpp_port"
                    app:layout_constraintEnd_toEndOf="@id/v_net_content_bg"/>

                <TextView
                    android:id="@+id/tv_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_project_name"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_xmpp_port"
                    app:layout_constraintStart_toStartOf="@id/v_net_content_bg"/>

                <EditText
                    android:id="@+id/et_pro_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="20sp"
                    android:digits="abcdefghijklmnopqrstuvwxyz123456789/"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_low"
                    android:enabled="@{setting12InchDataBean.serverInfoEnabled}"
                    android:text="@={setting12InchDataBean.serverProName}"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@id/tv_pro_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_pro_name"
                    app:layout_constraintStart_toEndOf="@id/tv_pro_name"
                    app:layout_constraintEnd_toEndOf="@id/v_net_content_bg"/>

                <Button
                    android:id="@+id/btn_save_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:background="@drawable/selector_btn_take_photo"
                    android:text="@string/setting_save_service_info"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:onClick="@{eventListener::onClick}"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_pro_name"
                    app:layout_constraintBottom_toBottomOf="@id/v_net_content_bg"
                    app:layout_constraintStart_toStartOf="@id/v_net_content_bg"
                    app:layout_constraintEnd_toEndOf="@id/v_net_content_bg"/>

                <View
                    android:id="@+id/v_check_version_bg"
                    style="@style/setting_text_child"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:background="@drawable/shape_employ_button"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/v_set_net_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_version_info_title"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:text="@string/update_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="@id/v_check_version_bg"
                    app:layout_constraintStart_toStartOf="@id/v_check_version_bg"
                    app:layout_constraintEnd_toEndOf="@id/v_check_version_bg"/>

                <TextView
                    android:id="@+id/tv_version_name_5inch_system"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{setting12InchDataBean.versionName}"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_version_info_title"
                    app:layout_constraintStart_toStartOf="@id/v_check_version_bg"/>

                <View
                    android:id="@+id/v_line_9"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_marginTop="10dp"
