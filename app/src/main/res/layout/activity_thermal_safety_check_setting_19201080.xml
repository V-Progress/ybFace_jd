<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/safety_check_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@mipmap/safety_check_top">

        <com.yunbiao.ybsmartcheckin_live_id.views.GradientColorTextView
            android:id="@+id/setting_title"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/System_Setting"
            android:textSize="42sp" />

        <TextView
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textSize="26dp"
            android:textColor="#1296DB"
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:text="@string/back"
            android:drawableLeft="@mipmap/back"/>
    </RelativeLayout>

    <ScrollView
        android:layout_gravity="center_horizontal"
        android:layout_width="800dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/safety_black_body_enable" />

                <Switch
                    android:id="@+id/sw_black_body_enable_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/safety_temperature_frame_enable" />

                <Switch
                    android:id="@+id/sw_temper_frame_enable_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/safety_immediate_report_enable" />

                <Switch
                    android:id="@+id/sw_immediate_report_mode_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/setting_low_temp_model" />

                <Switch
                    android:id="@+id/sw_low_temp_model_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/safety_auto_calibration_setting" />

                <Switch
                    android:id="@+id/sw_auto_calibration_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/setting_thermal_imaging_mirror" />

                <Switch
                    android:id="@+id/sw_thermal_imag_mirror_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/setting_temp_correct_value" />

                <Button
                    android:id="@+id/btn_body_correct_sub_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jian" />

                <LinearLayout
                    style="@style/style_setting_input_save_button"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/edt_body_correct__setting"
                        style="@style/style_setting_input_number_decimal_signed_edt"
                        android:textSize="18sp"
                        android:enabled="false" />

                    <TextView
                        style="@style/setting_text"
                        android:textSize="18sp"
                        android:text="℃" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_body_correct_add_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jia" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/setting_please_correct_multi_thermal"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                style="@style/setting_text_child"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/safety_temperature_threshold" />

                <Button
                    android:id="@+id/btn_temp_min_threshold_sub_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jian" />

                <LinearLayout
                    style="@style/style_setting_input_save_button"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/edt_temp_min_threshold_setting"
                        style="@style/style_setting_input_number_decimal_signed_edt"
                        android:textSize="18sp"
                        android:enabled="false" />

                    <TextView
                        style="@style/setting_text"
                        android:textSize="18sp"
                        android:text="℃" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_temp_min_threshold_add_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jia" />

                <TextView
                    style="@style/setting_text"
                    android:textSize="18sp"
                    android:text="@string/setting_temperature_warning" />

                <Button
                    android:id="@+id/btn_temp_warning_threshold_sub_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jian" />

                <LinearLayout
                    style="@style/style_setting_input_save_button"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/edt_temp_warning_threshold_setting"
                        style="@style/style_setting_input_number_decimal_signed_edt"
                        android:textSize="18sp"
                        android:enabled="false" />

                    <TextView
                        style="@style/setting_text"
                        android:textSize="18sp"
                        android:text="℃" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_temp_warning_threshold_add_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_jia" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_black_body_correction_area"
                style="@style/setting_text_child"
                android:layout_marginTop="10dp"
                android:onClick="setBlackBody"
                android:text="@string/setting_black_body_rect_multi_thermal" />

            <TextView
                style="@style/setting_text_child"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:onClick="powerOnOff"
                android:text="@string/setting_power_on_off" />

            <TextView
                style="@style/setting_text_child"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:onClick="resetWarningNumber"
                android:text="@string/setting_reset_warning_number" />

            <LinearLayout
                android:id="@+id/ll_black_body_pre_value"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                style="@style/setting_text_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_black_body_pre_value"
                    android:gravity="center"
                    android:maxLength="3"
                    style="@style/style_setting_input_number_edt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_black_body_save"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_bg_btnsync"
                    android:text="@string/act_power_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/shape_employ_button"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="bottom">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center"
                            android:textSize="22dp"
                            android:textColor="@color/white"
                            android:text="@string/update_version_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_version_name_sc_system"
                            android:padding="6dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <View
                            android:background="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <ScrollView
                            android:padding="6dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:id="@+id/tv_version_info_sc_system"
                                android:textSize="20dp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#2d000000"
                        android:id="@+id/fl_version_sc_system"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.wang.avi.AVLoadingIndicatorView
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <TextView
                            android:text="@string/update_check_ing"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_version_system"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:onClick="upgrade"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:id="@+id/btn_update_system"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_btn_take_photo"
                        android:text="@string/System_update"
                        android:textColor="@color/white"
                        android:textSize="22dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>