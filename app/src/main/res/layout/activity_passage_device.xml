<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PassageDeviceActivity">

    <com.yunbiao.faceview.FaceView
        android:id="@+id/face_view"
        android:layout_width="match_parent"
        android:layout_height="1422dp"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_top_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_main_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:onClick="goSetting"
                android:scaleType="centerInside"
                android:src="@mipmap/yb_logo" />


            <LinearLayout
                android:id="@+id/ll_clock_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_ambient_temperature_main"
                    android:format12Hour="yyyy/MM/dd  HH:mm:ss"
                    android:format24Hour="yyyy/MM/dd  HH:mm:ss"
                    android:textColor="@color/text_clock_color_main"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/tv_ambient_temperature_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/temperature_icon"
                    android:textColor="@color/text_clock_color_main"
                    android:textSize="28dp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:background="@drawable/shape_dot_area_background"
            android:paddingLeft="150dp"
            android:paddingRight="150dp">
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_temp_detection_dot_main"
                android:layout_width="100px"
                android:layout_height="160px"
                android:src="@mipmap/detection_dot" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_thermal_area_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_area"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_thermal_image_main"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_thermal_imaging_main"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ads_bg" />

            <TextView
                android:id="@+id/tv_thermal_percent_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#65000000"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/view_face_distance"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/shape_temperature_frame_background"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_temperature_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp_tips_main"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="65dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_temp_tips_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_range_tips_main"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#4D000000"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <FrameLayout
            android:id="@+id/ll_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top_area" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ll_face_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginRight="120dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp_tips_main"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="1313121212121"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_temperature_cache_min_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp_tips_main"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_temperature_cache_max_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp_tips_main"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_jiang_wen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="少量增加" />

        <Button
            android:id="@+id/btn_test_distance_far"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="距离较远" />

        <Button
            android:id="@+id/btn_test_distance_ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="距离合适（体温正常）" />

        <Button
            android:id="@+id/btn_test_distance_ok_warning"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="距离合适（体温异常）" />

        <Button
            android:id="@+id/btn_test_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="无人" />

        <Button
            android:id="@+id/btn_test_reset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="归0" />
    </LinearLayout>

</FrameLayout>