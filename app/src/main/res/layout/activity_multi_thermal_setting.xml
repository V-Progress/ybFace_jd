<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/multi_thermal_bg"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:gravity="center"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:background="@drawable/selector_btn_take_photo"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="1000dp"
        android:layout_height="wrap_content">

        <include layout="@layout/head_layout" />

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/setting_camera_mirror" />

            <CheckBox
                android:id="@+id/cb_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:text="@string/setting_open"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/setting_thermal_imaging_mirror" />

            <Switch
                android:id="@+id/sw_thermal_imag_mirror_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/setting_show_thermal_face_frame" />

            <Switch
                android:id="@+id/sw_thermal_face_frame_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/setting_show_black_body" />

            <Switch
                android:id="@+id/sw_black_body_frame_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/safety_black_body_enable" />

            <Switch
                android:id="@+id/sw_black_body_enable_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/setting_text"
                android:text="@string/setting_multi_track" />

            <Switch
                android:id="@+id/sw_multi_track_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                style="@style/setting_text"
                android:text="@string/setting_temperature_threshold" />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_temp_min_threshold_sub_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jian" />

            <LinearLayout
                android:visibility="gone"
                style="@style/style_setting_input_save_button"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/edt_temp_min_threshold_setting"
                    style="@style/style_setting_input_number_decimal_signed_edt"
                    android:enabled="false" />

                <TextView
                    style="@style/setting_text"
                    android:text="℃" />
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_temp_min_threshold_add_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jia" />

            <TextView
                style="@style/setting_text"
                android:text="@string/setting_temperature_warning" />

            <Button
                android:id="@+id/btn_temp_warning_threshold_sub_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jian" />

            <LinearLayout
                style="@style/style_setting_input_save_button"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/edt_temp_warning_threshold_setting"
                    style="@style/style_setting_input_number_decimal_signed_edt"
                    android:enabled="false" />

                <TextView
                    style="@style/setting_text"
                    android:text="℃" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_temp_warning_threshold_add_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jia" />
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_text"
                android:text="@string/setting_temp_correct_value" />

            <Button
                android:id="@+id/btn_body_correct_sub_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jian" />

            <LinearLayout
                style="@style/style_setting_input_save_button"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/edt_body_correct__setting"
                    style="@style/style_setting_input_number_decimal_signed_edt"
                    android:enabled="false" />

                <TextView
                    style="@style/setting_text"
                    android:text="℃" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_body_correct_add_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/icon_jia" />

            <TextView
                android:layout_marginLeft="10dp"
                android:text="@string/setting_please_correct_multi_thermal"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            style="@style/setting_text_child"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_text"
                android:text="@string/setting_low_temp_model" />

            <Switch
                android:id="@+id/sw_low_temp_model_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_black_body_correction_area"
            style="@style/setting_text_child"
            android:layout_marginTop="10dp"
            android:onClick="setBlackBody"
            android:text="@string/setting_black_body_rect_multi_thermal" />

        <TextView
            style="@style/setting_text_child"
            android:layout_marginTop="10dp"
            android:onClick="powerOnOff"
            android:text="@string/setting_power_on_off" />

        <LinearLayout
            android:id="@+id/ll_black_body_pre_value"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            style="@style/setting_text_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_black_body_pre_value"
                android:gravity="center"
                android:maxLength="3"
                style="@style/style_setting_input_number_edt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_black_body_save"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_bg_btnsync"
                android:text="@string/act_power_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            style="@style/setting_text_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_server_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_yun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/setting_cloud_service"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/rb_ju"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting_local_service"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_spinner_drop"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_ip_address"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_ip"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_resource_port"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_res_port"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_xmpp_port"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_xmpp_port"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_project_name"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edt_pro_name"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyz123456789/"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_low" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_save_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_take_photo"
                    android:text="@string/setting_save_service_info"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rl_correct_area"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/selector_btn_take_photo"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_example"
                android:layout_width="640dp"
                android:layout_height="480dp">

                <ImageView
                    android:id="@+id/iv_hot_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_example_multi_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <com.yunbiao.ybsmartcheckin_live_id.activity_temper_multiple.VerticalSeekBar
                android:id="@+id/sb_y_multi_setting"
                android:layout_width="wrap_content"
                style="@style/CustomSeekbarStyle"
                android:layout_height="480dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fl_example"
                android:rotation="180" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                style="@style/CustomSeekbarStyle"
                android:id="@+id/sb_x_multi_setting"
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_example"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <Button
            android:onClick="saveRect"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="@string/setting_save_multi_thermal"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_btnsync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>