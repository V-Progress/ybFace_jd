<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:scaleType="fitCenter"
            android:src="@drawable/skin_sign_list_head_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="2dp"
            android:background="@mipmap/head_bg"
            android:id="@+id/iv_head_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/horizontal_item_visitor_name"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_userPhoto"
            android:textColor="@color/horizontal_item_visitor_name"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>