        <activity android:name=".activity_temper_check_in_smt.SMTMainActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTSystemActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTEmployListActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTEditEmployActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTRecordActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTSettingActivity" />
        <activity android:name=".activity_temper_check_in_smt.SMTVisitorActivity" />

        <!--人证-->
        <activity android:name=".activity_certificates.CertificatesActivity">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity> <!-- 人证对比 -->
        <activity android:name=".activity_certificates.CertificatesTestActivity" />
        <activity android:name=".activity_certificates.CertificatesSystemActivity" />
        <activity android:name=".activity_certificates.CertificatesSettingActivity" />
        <activity android:name=".activity_certificates.CertificatesCorrectActivity" />

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="xKjZ2Yn9ms9FuRVv1k0IGj3clhaGUIkV" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <receiver android:name=".receiver.USBBroadcastReceiver">
            <intent-filter android:priority="800">
                <action android:name="android.hardware.usb.action.USB_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.BootRestartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.DateChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".business.AlarmManagerUtil$AlarmBroadcast"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="alarm_action" />
            </intent-filter>
        </receiver> <!-- 百度定位 -->
        <service android:name="com.huashi.otg.sdk.HsOtgService" />
        <service
            android:name=".ReadCardService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility" />
        </service>
        <service android:name=".utils.killSelfService" />
        <service android:name=".xmpp.NotificationService" />
        <service android:name=".receiver.MyProtectService" />
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:permission="android.permission.BAIDU_LOCATION_SERVICE"
            android:process=":remote" />
    </application>

